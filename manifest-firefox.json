{
  "manifest_version": 3,
  "name": "WhatPulse Web Insights",
  "version": "0.0.3",
  "description": "Provides website usage insights for your WhatPulse account.",
  "browser_specific_settings": {
    "gecko": {
      "id": "webinsights@whatpulse.org",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "idle"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src ws://127.0.0.1:3488 ws://localhost:3488"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/action-icon16.png",
      "32": "icons/action-icon32.png",
      "48": "icons/action-icon48.png",
      "128": "icons/action-icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}